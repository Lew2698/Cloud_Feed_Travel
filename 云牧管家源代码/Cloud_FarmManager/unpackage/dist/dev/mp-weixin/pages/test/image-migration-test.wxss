.page-container {
  padding: 30rpx;
  background-color: #f2e8cf;
  min-height: 100vh;
}
.header {
  text-align: center;
  margin-bottom: 40rpx;
}
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #386641;
  display: block;
  margin-bottom: 10rpx;
}
.subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}
.status-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #386641;
}
.refresh-btn {
  background-color: #bc4749;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}
.status-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}
.status-text {
  font-size: 28rpx;
  color: #666;
}
.upload-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #386641;
  margin-bottom: 20rpx;
  display: block;
}
.upload-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}
.upload-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  background-color: #f9f9f9;
}
.upload-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}
.upload-text {
  font-size: 24rpx;
  color: #666;
}
.action-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}
.action-btn {
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  color: white;
}
.upload-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
}
.migrate-btn {
  background: linear-gradient(135deg, #bc4749, #6a994e);
}
.test-btn {
  background: linear-gradient(135deg, #5352ed, #3742fa);
}
.action-btn[disabled] {
  opacity: 0.6;
}
.uploaded-images {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.image-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}
.image-item {
  border: 1px solid #eee;
  border-radius: 12rpx;
  overflow: hidden;
}
.preview-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}
.image-info {
  padding: 15rpx;
}
.image-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #386641;
  display: block;
  margin-bottom: 5rpx;
}
.image-path {
  font-size: 20rpx;
  color: #999;
  word-break: break-all;
}
.image-actions {
  padding: 10rpx 15rpx;
  border-top: 1px solid #eee;
}
.delete-btn {
  background-color: #ff4757;
  color: white;
  border: none;
  border-radius: 6rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
}
.mapping-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.mapping-list {
  max-height: 400rpx;
  overflow-y: auto;
}
.mapping-item {
  border-bottom: 1px solid #f0f0f0;
  padding: 15rpx 0;
}
.mapping-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
}
.local-path {
  flex: 1;
  font-size: 22rpx;
  color: #666;
  word-break: break-all;
}
.arrow {
  font-size: 24rpx;
  color: #bc4749;
}
.cloud-path {
  flex: 1;
  font-size: 22rpx;
  color: #bc4749;
  word-break: break-all;
}
.test-results {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.result-item {
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.result-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #386641;
}
.result-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}
.result-status.success {
  background-color: #2ed573;
  color: white;
}
.result-status.error {
  background-color: #ff4757;
  color: white;
}
.result-message {
  font-size: 26rpx;
  color: #666;
}
.logs {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.logs-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #386641;
  margin-bottom: 20rpx;
  display: block;
}
.log-item {
  display: flex;
  align-items: flex-start;
  padding: 10rpx 0;
  border-bottom: 1px solid #f0f0f0;
}
.log-item:last-child {
  border-bottom: none;
}
.log-time {
  font-size: 22rpx;
  color: #999;
  margin-right: 15rpx;
  min-width: 80rpx;
}
.log-message {
  font-size: 24rpx;
  flex: 1;
}
.log-message.info {
  color: #666;
}
.log-message.success {
  color: #2ed573;
}
.log-message.error {
  color: #ff4757;
}