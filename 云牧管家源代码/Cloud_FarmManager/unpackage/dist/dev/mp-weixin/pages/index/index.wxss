/* 页面容器 */
.page-container {
  padding-bottom: 50px;
  /* 为原生tabBar留出空间 */
  width: 100%;
  box-sizing: border-box;
}
/* 欢迎栏 */
.welcome-header {
  background-color: #386641;
  padding: 30rpx;
  border-radius: 0 0 40rpx 40rpx;
}
.welcome-text {
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
  display: block;
}
.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
}
/* 内容区域 */
.content {
  padding: 30rpx;
}
/* 轮播图 */
.hero-banner {
  width: 100%;
  height: 400rpx;
  position: relative;
  overflow: hidden;
  border-radius: 30rpx;
}
.hero-banner image {
  width: 100%;
  height: 100%;
}
.featured-tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background-color: #bc4749;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 600;
}
/* 快速功能访问 */
.quick-access {
  display: flex;
  justify-content: space-between;
  margin: 70rpx 0;
}
.quick-access-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.quick-access-icon {
  width: 100rpx;
  height: 100rpx;
  background-color: #6a994e;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  color: white;
  font-size: 40rpx;
}
.quick-access-label {
  font-size: 24rpx;
  text-align: center;
}
/* 特色栏目 */
.featured-section {
  margin: 50rpx 0;
}
.section-title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  color: #386641;
  display: block;
}
.feature-cards {
  display: flex;
  justify-content: space-between;
}
.feature-card {
  width: 48%;
  background-color: white;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 4px 10px rgba(94, 100, 114, 0.1);
}
.feature-image {
  width: 100%;
  height: 240rpx;
}
.feature-info {
  padding: 24rpx;
}
.feature-title {
  font-weight: 600;
  font-size: 32rpx;
  margin-bottom: 10rpx;
  color: #386641;
  display: block;
}
.feature-desc {
  font-size: 24rpx;
  color: #777;
  display: block;
}
/* 产品推荐 */
.product-recommendations {
  margin-top: 50rpx;
}
.product-card {
  background-color: white;
  border-radius: 30rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 3px 8px rgba(94, 100, 114, 0.1);
}
.product-image {
  width: 100%;
  height: 300rpx;
}
.product-details {
  padding: 24rpx;
}
.product-name {
  font-weight: 600;
  font-size: 32rpx;
  margin-bottom: 10rpx;
  display: block;
}
.product-price {
  font-size: 36rpx;
  color: #bc4749;
  margin-bottom: 10rpx;
  font-weight: 700;
  display: block;
}
.product-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #777;
}
.star-icon {
  width: 30rpx;
  height: 30rpx;
}
/* 颜色变量 */
