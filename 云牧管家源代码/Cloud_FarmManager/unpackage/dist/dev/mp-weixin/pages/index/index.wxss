  --primary-color: #bc4749;
  /* 鲜红色 */
  --secondary-color: #f2e8cf;
  /* 浅米色 */
  --accent-color: #a7c957;
  /* 浅绿色 */
  --highlight-color: #6a994e;
  /* 中绿色 */
  --dark-color: #386641;
  /* 深绿色 */
}