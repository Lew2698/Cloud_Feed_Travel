page {
  background-color: #f2e8cf;
}
/* 页面容器 */
.page-container {
  padding-bottom: 50px;
  /* 为原生tabBar留出空间 */
  width: 100%;
  box-sizing: border-box;
}
/* 欢迎栏 */
.welcome-header {
  background-color: #a7c957;
  padding: 30rpx;
  border-radius: 0 0 30rpx 30rpx;
  margin-bottom: 30rpx;
}
.welcome-text {
  font-weight: 600;
  font-size: 36rpx;
  color: #386641;
  margin-bottom: 10rpx;
  display: block;
}
.subtitle {
  font-size: 28rpx;
  color: #386641;
  opacity: 0.8;
  display: block;
}
/* 内容区域 */
.content {
  padding: 0 30rpx 30rpx;
}
/* 能量条 */
.energy-bar {
  background-color: white;
  border-radius: 30rpx;
  padding: 30rpx;
  box-shadow: 0 4px 10px rgba(94, 100, 114, 0.1);
  margin-bottom: 30rpx;
}
.energy-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #bc4749;
}
.badge {
  display: inline-block;
  background-color: #bc4749;
  color: white;
  font-size: 24rpx;
  font-weight: 600;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-left: 10rpx;
}
.energy-desc {
  font-size: 24rpx;
  color: #777;
  display: block;
  margin-top: 6rpx;
}
.energy-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(167, 201, 87, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.energy-icon .iconfont {
  font-size: 40rpx;
  color: #6a994e;
}
.energy-progress {
  width: 100%;
  height: 20rpx;
  background-color: #eee;
  border-radius: 20rpx;
  overflow: hidden;
  margin-top: 20rpx;
}
.energy-fill {
  height: 100%;
  background-color: #a7c957;
  width: 70%;
  border-radius: 20rpx;
}
.energy-next {
  font-size: 24rpx;
  color: #777;
  text-align: right;
  display: block;
  margin-top: 10rpx;
}
/* 农场数据 */
.farm-footer {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  background-color: white;
  border-radius: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4px 10px rgba(94, 100, 114, 0.1);
}
.farm-stats {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.stats-value {
  font-weight: 700;
  color: #386641;
  font-size: 36rpx;
  line-height: 1.2;
}
.stats-label {
  font-size: 24rpx;
  color: #777;
  margin-top: 6rpx;
}
/* 功能模块 */
.farm-modules {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
  margin-bottom: 40rpx;
}
.farm-module {
  background-color: white;
  border-radius: 30rpx;
  padding: 30rpx;
  box-shadow: 0 4px 10px rgba(94, 100, 114, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  transition: all 0.3s ease;
  height: 240rpx;
}
.module-icon {
  font-size: 56rpx;
  margin-bottom: 20rpx;
}
.farm-module:nth-child(1) .module-icon {
  color: #bc4749;
}
.farm-module:nth-child(2) .module-icon {
  color: #6a994e;
}
.farm-module:nth-child(3) .module-icon {
  color: #a7c957;
}
.farm-module:nth-child(4) .module-icon {
  color: #386641;
}
.module-title {
  font-weight: 600;
  font-size: 28rpx;
  color: #386641;
  line-height: 1.4;
}
/* 动态列表 */
.section-title {
  font-size: 36rpx;
  font-weight: 600;
  margin: 20rpx 0;
  color: #386641;
  display: block;
}
.card {
  background-color: white;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 4px 10px rgba(94, 100, 114, 0.1);
}
.list-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}
.list-item:last-child {
  border-bottom: none;
}
.list-icon {
  margin-right: 20rpx;
  font-size: 40rpx;
}
.list-item:nth-child(1) .list-icon {
  color: #bc4749;
}
.list-item:nth-child(2) .list-icon {
  color: #a7c957;
}
.list-item:nth-child(3) .list-icon {
  color: #6a994e;
}
.list-content {
  margin-left: 10rpx;
}
.list-title {
  font-weight: 600;
  font-size: 28rpx;
  color: #386641;
  display: block;
}
.list-time {
  font-size: 24rpx;
  color: #777;
  display: block;
  margin-top: 6rpx;
}
.list-arrow {
  color: #ccc;
  font-size: 32rpx;
}
.flex {
  display: flex;
}
.justify-between {
  justify-content: space-between;
}
.items-center {
  align-items: center;
}
.icon-icon {
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  transform: translateY(-10rpx);
}
.seeding-icon {
  width: 50rpx;
  height: 50rpx;
}
.else-icon {
  width: 30rpx;
  height: 30rpx;
}